<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Inserir</servlet-name>
        <servlet-class>com.danilorocha.padraodaoajax.Controller.Inserir</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InserirComXml</servlet-name>
        <servlet-class>com.danilorocha.padraodaoajax.Controller.InserirComXml</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Listar</servlet-name>
        <servlet-class>com.danilorocha.padraodaoajax.Controller.Listar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarComXml</servlet-name>
        <servlet-class>com.danilorocha.padraodaoajax.Controller.ListarComXml</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletarComXml</servlet-name>
        <servlet-class>com.danilorocha.padraodaoajax.Controller.DeletarComXml</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarComXml</servlet-name>
        <servlet-class>com.danilorocha.padraodaoajax.Controller.EditarComXml</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Inserir</servlet-name>
        <url-pattern>/inserir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InserirComXml</servlet-name>
        <url-pattern>/inserircomxml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Listar</servlet-name>
        <url-pattern>/listar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarComXml</servlet-name>
        <url-pattern>/listarcomxml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletarComXml</servlet-name>
        <url-pattern>/deletarcomxml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarComXml</servlet-name>
        <url-pattern>/editarcomxml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
